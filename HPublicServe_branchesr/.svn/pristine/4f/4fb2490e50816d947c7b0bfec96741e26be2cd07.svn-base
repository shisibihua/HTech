@charset "utf-8";

/* 普通翻页器-默认居中 */

.m-page {
    clear: both;
    margin: 20px 0;
    text-align: center;
    font-size: 0;
    letter-spacing: -0.307em;
    word-wrap: normal;
    white-space: nowrap;
}

.m-page a,
.m-page span {
    display: inline-block;
    line-height: 32px;
    vertical-align: top;
    padding: 0 12px;
    margin-left: -1px;
    border: 1px solid #ddd;
    font-size: 12px;
    letter-spacing: normal;
    text-shadow: 0 1px #fff;
    background: #fff;
    -webkit-transition: background-color 0.3s;
    -moz-transition: background-color 0.3s;
    -ms-transition: background-color 0.3s;
    transition: background-color 0.3s;
}

.m-page span.current {
    font-weight: 600;
}

.m-page a,
.m-page a:hover {
    text-decoration: none;
    color: #2a2a2a;
}

.m-page .prev {
    margin-left: 0;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
}

.m-page .next {
    margin-right: 0;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

.m-page a.prev:before,
.m-page a.next:after {
    font-weight: bold;
    font-family: \5b8b\4f53;
    vertical-align: top;
}

.m-page a.prev:before {
    margin-right: 3px;
    content: '\3C';
}

.m-page a.next:after {
    margin-left: 3px;
    content: '\3E';
}

.m-page a:hover {
    background: #f5f5f5;
}

.m-page a:active {
    background: #f0f0f0;
}

.m-page span.current,
.m-page span.current:hover,
.m-page span.current:active {
    cursor: default;
    color: #2a2a2a;
    background: #cdcfd5;
    font-size: 12px;
}

.m-page span.current.prev,
.m-page span.current.next {
    cursor: default;
    color: #ccc;
    background: #fff;
    font-weight: normal;
}